<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  
  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.select :user_id, User.all.collect {|user| [user.name, user.id]}, class: 'form-control', placeholder: 'Enter user id' %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
